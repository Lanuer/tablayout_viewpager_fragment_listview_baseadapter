<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lanuer.tablayout_viewpager_fragment.MainActivity"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:tabIndicatorColor="#66ff33"
        app:tabTextColor="#ffffff"
        app:tabSelectedTextColor="#ffffff"
        app:tabMode="fixed" />
    <!--
               background導航欄背景顏色
               tabIndicatorColor指示器顏色
               tabIndicatorHeight指示器高度
               tabTextColor未選中時文字的顏色
               tabSelectedTextColor選中時文字的顏色
               tabMode是否可滑動：fixed：固定；scrollable：可滑動
         -->

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
